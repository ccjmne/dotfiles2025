#! /bin/sh

summarise() {
    for bk in $(klog bookmarks list | grep -Eo '^[^ ]+'); do
        klog tags $bk --since $(date -I -d'yesterday') -un --filter 'type:OPEN_RANGE' --no-style --no-warn | sed -E "/\b0m/d; s/^\(untagged\)/$bk/; s/ +/ /g; s/ *$//"
    done
}
summarise | paste -sd, | sed 's/ *,/, /g'
