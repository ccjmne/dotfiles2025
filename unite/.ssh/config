#Match host * exec "gpg-connect-agent UPDATESTARTUPTTY /bye"

# Git hosts
Host bitbucket.mercateo.lan
  IdentityFile ~/.ssh/id_rsa
  IdentitiesOnly yes
  HostkeyAlgorithms +ssh-rsa
  PubkeyAcceptedAlgorithms +ssh-rsa

Host gitlab.build-unite.unite.eu
  User git
  IdentityFile ~/.ssh/id_rsa
  LogLevel=quiet
  PubkeyAcceptedAlgorithms +ssh-rsa
  HostkeyAlgorithms +ssh-rsa

