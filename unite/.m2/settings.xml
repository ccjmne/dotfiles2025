<settings>
    <profiles>
        <profile>
            <id>default</id>
            <repositories>
                <repository>
                    <id>platform</id>
                    <name>platform</name>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <url>http://nexus.mercateo.lan/nexus/service/local/repositories/platform/
                    </url>
                    <layout>default</layout>
                </repository>
                <repository>
                    <id>platform_snapshot</id>
                    <name>platform_snapshot</name>
                    <releases>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>interval:86400</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </snapshots>
                    <url>http://nexus.mercateo.lan/nexus/service/local/repositories/platform_snapshot/
                    </url>
                    <layout>default</layout>
                </repository>
                <repository>
                    <id>platform_external</id>
                    <name>platform_external</name>
                    <releases>
                        <enabled>false</enabled>
                        <updatePolicy>never</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <url>http://nexus.mercateo.lan/nexus/service/local/repositories/platform_external/
                    </url>
                    <layout>default</layout>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <mirrors>
        <mirror>
            <id>mirror</id>
            <name>corporate nexus</name>
            <url>http://nexus.mercateo.lan/nexus/content/groups/dispatcher/</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>
    <activeProfiles>
        <activeProfile>default</activeProfile>
    </activeProfiles>
    <pluginGroups>
        <pluginGroup>com.mercateo.maven</pluginGroup>
    </pluginGroups>
</settings>
